<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/context 
       http://www.springframework.org/schema/context/spring-context.xsd">

	<context:component-scan base-package="com.todo.controllers"/>

	<!-- properties which contain database connection string, user name, password, etc. -->
	<context:property-placeholder location="database.properties"/>

	<!-- Basic datasource which data providers will be using -->
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName" value="${database.driverClassName}" />
		<property name="url" value="${database.connectionString}" />
		<property name="username" value="${database.userName}" />
		<property name="password" value="${database.userPassword}" />
	</bean>

	<!-- jdbc data provider configuration -->
	<bean id="jdbcProvider" class="com.todo.data.jdbc.JDBCToDoDataProvider">
		<property name="dataSource" ref="dataSource" />
	</bean>

